[Unit]
Description=Fire Station
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Restart=always
DynamicUser=yes
SupplementaryGroups=audio
AmbientCapabilities=CAP_NET_ADMIN CAP_NET_RAW CAP_IPC_LOCK CAP_SYS_NICE
CapabilityBoundingSet=CAP_NET_ADMIN CAP_NET_RAW CAP_IPC_LOCK CAP_SYS_NICE
LoadCredential=config.json:/etc/fire-station
ExecStart=/usr/bin/fire-station ${CREDENTIALS_DIRECTORY}/config.json

[Install]
WantedBy=multi-user.target
